---
// component showing a list of people (sorted by lastname), joining with commas.
interface Props {
  people: string[];
}

const peopleString = Astro.props.people
  // sort people by last name
  .toSorted((a, b) => {
    const aLastname = a.split(" ")[1];
    const bLastname = b.split(" ")[1];
    return aLastname.localeCompare(bLastname);
  })
  // join by commas
  .join(", ");
---

{peopleString}
