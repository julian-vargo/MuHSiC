          corpora: [
            {
              name: "Brieven als Buit",
              link: "https://ivdnt.org/corpora-lexica/brieven-als-buit/",
            },
          ],
        },
        {
          language: "English",
          corpora: [
            {
              name: "SLAAP: The Sociolinguistic Archive and Analysis Project",
              link: "http://slaap.lib.ncsu.edu/",
            },
            {
