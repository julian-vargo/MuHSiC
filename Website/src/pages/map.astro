---
import LocationsMap from "../components/LocationsMap";

const res = await fetch(new URL("/api/locations.json", Astro.url));
if (!res.ok) {
  throw new Error(`Failed to load points: ${res.status}`);
}
const { points } = await res.json();
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>MuHSiC Map</title>
    <link rel="stylesheet" href="/style.css" />
  </head>

  <body>
    <header>
      <nav>
        <a href="/" aria-label="MuHSiC home">MuHSiC</a>

        <ul>
          <li><a href="/about">About</a></li>
          <li><a href="/download">Download</a></li>
          <li><a href="/map">Map</a></li>
        </ul>

        <details>
          <summary>
            <button type="button" aria-label="Open menu">Menu</button>
          </summary>
          <ul>
            <li><a href="/about">About</a></li>
            <li><a href="/download">Download</a></li>
            <li><a href="/map">Map</a></li>
          </ul>
        </details>
      </nav>
    </header>

    <main>
      <h1>MuHSiC Locations</h1>

      <p class="justify">
        Locations are plotted from the MuHSiC table using the <code>latitude</code> and{" "}
        <code>longitude</code> columns.
      </p>

      {/* Full-bleed map container aligned with your existing #map CSS rule */}
      <section id="map" aria-label="Map of MuHSiC locations">
        <LocationsMap client:only="react" points={points} />
      </section>
    </main>

    <footer>
      <div>
        MuHSiC â€” Department of Spanish &amp; Portuguese, University of California, Berkeley
      </div>
    </footer>
  </body>
</html>
